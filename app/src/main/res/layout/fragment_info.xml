<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".InfoFragment">

    <data>
        <variable
            name="infoFragment"
            type="com.example.weather.InfoFragment" />
        <variable
            name="viewModel"
            type="com.example.weather.viewmodel.CityInfoViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.status.toString()}"
                tools:text="status"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{viewModel.weatherData.weather[0].description.toString()}"
                tools:text="Description"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{Double.toString(viewModel.weatherData.main.temp)}"
                tools:text="Temperature"/>


        </LinearLayout>
    </ScrollView>
</layout>